{
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "title": "glasses",
      "required": [
        "brand",
        "graduation",
        "frame_type",
        "frame_color",
        "glass_color",
        "price"
      ],
      "properties": {
        "brand": {
          "bsonType": "objectId",
          "ref": "brand"
        },
        "graduation": {
          "bsonType": "objectId",
          "ref": "graduation"
        },
        "frame_type": {
          "bsonType": "string",
          "enum": [
            "float",
            "metalic",
            "plastic"
          ]
        },
        "frame_color": {
          "bsonType": "string"
        },
        "glass_color": {
          "bsonType": "objectId",
          "ref": "glass_color"
        },
        "price": {
          "bsonType": "decimal"
        }
      }
    }
  }
}