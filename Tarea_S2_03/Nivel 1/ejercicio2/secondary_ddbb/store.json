{
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "title": "store",
      "required": [
        "name",
        "address",
        "phone",
        "mail"
      ],
      "properties": {
        "name": {
          "bsonType": "string"
        },
        "address": {
          "bsonType": "objectId",
          "ref": "address"
        },
        "phone": {
          "bsonType": "string"
        },
        "mail": {
          "bsonType": "string"
        }
      }
    }
  }
}